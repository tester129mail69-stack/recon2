[
  {"name": "AWS Access Key", "pattern": "AKIA[0-9A-Z]{16}", "severity": "critical", "description": "AWS Access Key ID"},
  {"name": "AWS Secret Key", "pattern": "(?i)aws[_\\-\\s]?secret[_\\-\\s]?(?:access[_\\-\\s]?)?key[\\s]*[=:][\\s]*['\"]?([A-Za-z0-9/+=]{40})['\"]?", "severity": "critical", "description": "AWS Secret Access Key"},
  {"name": "Google API Key", "pattern": "AIza[0-9A-Za-z\\-_]{35}", "severity": "critical", "description": "Google API Key"},
  {"name": "Google OAuth Token", "pattern": "ya29\\.[0-9A-Za-z\\-_]+", "severity": "critical", "description": "Google OAuth Access Token"},
  {"name": "Stripe Live Key", "pattern": "sk_live_[0-9a-zA-Z]{24}", "severity": "critical", "description": "Stripe Live Secret Key"},
  {"name": "Stripe Publishable Key", "pattern": "pk_live_[0-9a-zA-Z]{24}", "severity": "high", "description": "Stripe Live Publishable Key"},
  {"name": "Stripe Test Key", "pattern": "sk_test_[0-9a-zA-Z]{24}", "severity": "medium", "description": "Stripe Test Secret Key"},
  {"name": "Slack Token", "pattern": "xox[baprs]-[0-9]{10,13}-[0-9]{10,13}-[0-9a-zA-Z]{24,32}", "severity": "critical", "description": "Slack API Token"},
  {"name": "Slack Webhook", "pattern": "https://hooks\\.slack\\.com/services/T[a-zA-Z0-9_]+/B[a-zA-Z0-9_]+/[a-zA-Z0-9_]+", "severity": "high", "description": "Slack Incoming Webhook URL"},
  {"name": "GitHub Token", "pattern": "ghp_[a-zA-Z0-9]{36}", "severity": "critical", "description": "GitHub Personal Access Token"},
  {"name": "GitHub OAuth", "pattern": "gho_[a-zA-Z0-9]{36}", "severity": "critical", "description": "GitHub OAuth Token"},
  {"name": "GitHub Actions", "pattern": "ghs_[a-zA-Z0-9]{36}", "severity": "critical", "description": "GitHub Actions Token"},
  {"name": "JWT Token", "pattern": "eyJ[A-Za-z0-9_/+\\-]{10,}\\.[A-Za-z0-9_/+\\-]{10,}\\.[A-Za-z0-9_/+\\-]{10,}", "severity": "high", "description": "JSON Web Token (JWT)"},
  {"name": "RSA Private Key", "pattern": "-----BEGIN RSA PRIVATE KEY-----", "severity": "critical", "description": "RSA Private Key"},
  {"name": "EC Private Key", "pattern": "-----BEGIN EC PRIVATE KEY-----", "severity": "critical", "description": "EC Private Key"},
  {"name": "Generic Private Key", "pattern": "-----BEGIN PRIVATE KEY-----", "severity": "critical", "description": "Generic Private Key"},
  {"name": "OpenSSH Private Key", "pattern": "-----BEGIN OPENSSH PRIVATE KEY-----", "severity": "critical", "description": "OpenSSH Private Key"},
  {"name": "Password Assignment", "pattern": "(?i)password[\\s]*[=:][\\s]*['\"][^'\"]{6,}['\"]", "severity": "high", "description": "Hardcoded password assignment"},
  {"name": "API Key Assignment", "pattern": "(?i)api[_\\-]?key[\\s]*[=:][\\s]*['\"][^'\"]{8,}['\"]", "severity": "high", "description": "Hardcoded API key"},
  {"name": "Secret Assignment", "pattern": "(?i)(?:secret|client_secret)[\\s]*[=:][\\s]*['\"][^'\"]{8,}['\"]", "severity": "high", "description": "Hardcoded secret"},
  {"name": "Token Assignment", "pattern": "(?i)(?:auth[_\\-]?)?token[\\s]*[=:][\\s]*['\"][^'\"]{8,}['\"]", "severity": "high", "description": "Hardcoded token"},
  {"name": "Database Connection String", "pattern": "(?i)(?:mysql|postgres|mongodb|mssql|sqlite)://[^\\s\"'<>]+", "severity": "critical", "description": "Database connection string"},
  {"name": "Firebase URL", "pattern": "https://[a-z0-9-]+\\.firebaseio\\.com", "severity": "high", "description": "Firebase Realtime Database URL"},
  {"name": "Heroku API Key", "pattern": "[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}", "severity": "high", "description": "Heroku API Key (UUID format)"},
  {"name": "Twilio Account SID", "pattern": "AC[a-zA-Z0-9]{32}", "severity": "high", "description": "Twilio Account SID"},
  {"name": "Twilio Auth Token", "pattern": "(?i)twilio[\\s\\S]{0,20}auth[_\\-\\s]?token[\\s]*[=:][\\s]*['\"]?([a-f0-9]{32})['\"]?", "severity": "critical", "description": "Twilio Auth Token"},
  {"name": "SendGrid API Key", "pattern": "SG\\.[a-zA-Z0-9_\\-]{22}\\.[a-zA-Z0-9_\\-]{43}", "severity": "critical", "description": "SendGrid API Key"},
  {"name": "MailChimp API Key", "pattern": "[0-9a-f]{32}-us[0-9]{1,2}", "severity": "high", "description": "MailChimp API Key"},
  {"name": "Square Access Token", "pattern": "sq0atp-[0-9A-Za-z_\\-]{22}", "severity": "critical", "description": "Square Access Token"},
  {"name": "Square OAuth Secret", "pattern": "sq0csp-[0-9A-Za-z_\\-]{43}", "severity": "critical", "description": "Square OAuth Client Secret"},
  {"name": "Internal IP 10.x", "pattern": "http://10\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}", "severity": "medium", "description": "Internal network URL (10.x.x.x)"},
  {"name": "Internal IP 192.168.x", "pattern": "http://192\\.168\\.[0-9]{1,3}\\.[0-9]{1,3}", "severity": "medium", "description": "Internal network URL (192.168.x.x)"},
  {"name": "Internal IP 172.x", "pattern": "http://172\\.(?:1[6-9]|2[0-9]|3[01])\\.[0-9]{1,3}\\.[0-9]{1,3}", "severity": "medium", "description": "Internal network URL (172.16-31.x.x)"},
  {"name": "Basic Auth in URL", "pattern": "https?://[^:@\\s]+:[^@\\s]+@[^\\s/]+", "severity": "critical", "description": "Credentials embedded in URL"},
  {"name": "NPM Token", "pattern": "npm_[A-Za-z0-9]{36}", "severity": "critical", "description": "NPM access token"},
  {"name": "PyPI Token", "pattern": "pypi-AgEIcHlwaS5vcmc[A-Za-z0-9_\\-]+", "severity": "critical", "description": "PyPI API token"},
  {"name": "Docker Hub Token", "pattern": "dckr_pat_[A-Za-z0-9_\\-]{27}", "severity": "critical", "description": "Docker Hub Personal Access Token"},
  {"name": "Azure Storage Key", "pattern": "DefaultEndpointsProtocol=https;AccountName=[^;]+;AccountKey=[A-Za-z0-9+/=]{88}", "severity": "critical", "description": "Azure Storage connection string"},
  {"name": "GCP Service Account", "pattern": "\"type\":\\s*\"service_account\"", "severity": "high", "description": "GCP Service Account credential indicator"},
  {"name": "Hardcoded IP Assignment", "pattern": "(?i)(?:host|server|endpoint)[\\s]*[=:][\\s]*['\"](?:[0-9]{1,3}\\.){3}[0-9]{1,3}['\"]", "severity": "low", "description": "Hardcoded IP address in config"}
]
